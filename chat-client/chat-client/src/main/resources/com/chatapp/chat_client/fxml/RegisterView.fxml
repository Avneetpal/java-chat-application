<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.chat_client.controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Create New Account">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <Label fx:id="infoLabel" textFill="RED" />
    <TextField fx:id="usernameField" promptText="Choose a Username" />
    <PasswordField fx:id="passwordField" promptText="Choose a Password" />
    <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" prefWidth="100.0" text="Register" />
    <Hyperlink fx:id="backToLoginLink" onAction="#handleBackToLoginClick" text="Back to Login" />
</VBox>