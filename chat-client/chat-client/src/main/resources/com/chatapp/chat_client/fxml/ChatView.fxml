<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.chat_client.controller.ChatController">

    <left>
        <VBox prefWidth="200.0">
            <ListView fx:id="userListView" VBox.vgrow="ALWAYS" />
            <Button fx:id="newChatButton" maxWidth="Infinity" onAction="#handleNewChatAction" text="New Chat" />
        </VBox>
    </left>

    <center>
        <VBox BorderPane.alignment="CENTER">
            <ListView fx:id="messageListView" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
                <TextField fx:id="messageTextField" HBox.hgrow="ALWAYS" promptText="Type a message..." />
                <Button fx:id="sendButton" mnemonicParsing="false" text="Send" />
            </HBox>
        </VBox>
    </center>
</BorderPane>