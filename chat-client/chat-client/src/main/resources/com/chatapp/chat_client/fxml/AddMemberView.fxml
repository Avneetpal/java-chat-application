<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.chat_client.controller.AddMemberController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <Label fx:id="titleLabel" text="Add Members to Group">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label text="Select users to add (use Ctrl-Click for multiple)" />
        <ListView fx:id="usersListView" prefHeight="200.0" VBox.vgrow="ALWAYS" />
        <Button fx:id="addMembersButton" onAction="#handleAddMembersAction" prefWidth="320.0" text="Add Selected Members" />
        <Label fx:id="errorLabel" textFill="RED" />
    </children>
</VBox>